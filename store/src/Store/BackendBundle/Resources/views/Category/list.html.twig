{% extends "StoreBackendBundle::layout.html.twig" %}

{% block titlepage %}
    <i class="menu-icon fa fa-th"></i> Liste des catégories
{% endblock %}

{% block content %}

    <div class="table-info">

        <table class="table table-bordered">

            <thead>

            <tr>
                <th>#</th>
                <th>Titre</th>
                <th class="col-md-4">Description</th>
                <th>Nombre de produits associés</th>
                <th>État</th>
                <th>Actions</th>
            </tr>

            </thead>

            <tbody>

            {% for category in categories %}

            <tr>

                <td> {{ category.id }} </td>
                <td> <a href="{{ path('store_backend_category_view', {'name' : category.title , 'id': category.id} ) }}"> {{ category.title }} </a> </td>
                <td> {{ category.description }} </td>
                <td> <span class="badge badge-info"> {{ category.product|length }} </span> produits associés </td>

                <td> {% if category.active == 0 %}
                        <i class="fa fa-times"></i> Désactivée
                    {% else %}
                        <i class="fa fa-check"></i> Activée
                    {% endif %}
                </td>

                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-cogs"></i> Actions <i class="fa fa-caret-down"></i></button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('store_backend_category_view', {'name': category.title , 'id': category.id} ) }}"> <i class="fa fa-search"></i> Voir</a></li>
                            <li><a href="#"> <i class="fa fa-pencil"></i> Éditer</a></li>
                            <li><a href="{{ path('store_backend_category_remove', {'id': category.id} ) }}"> <i class="fa fa-times"></i> Supprimer</a></li>
                        </ul>
                    </div>
                </td>

            </tr>

            {% endfor %}

            </tbody>

        </table>

    </div>

{% endblock %}