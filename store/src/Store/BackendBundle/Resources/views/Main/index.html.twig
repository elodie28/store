{% extends "StoreBackendBundle::layout.html.twig" %}

{% block titlepage %}
    <i class="menu-icon fa fa-dashboard"></i> Dashboard
{% endblock %}

{% block content %}

    <div class="row">

        <div class="col-md-8">

            {# STATISTIQUES : nb Produits / nb Catégories / nb Pages CMS / nb Commentaires / nb Commandes #}

            <div class="stat-cell col-sm-4 padding-sm-hr bordered no-border-r valign-top">
                <!-- Small padding, without top padding, extra small horizontal padding -->
                <h4 class="padding-sm no-padding-t padding-xs-hr"><i class="fa fa-cloud-upload text-primary"></i>&nbsp;&nbsp;MES STATISTIQUES</h4>
                <!-- Without margin -->
                <ul class="list-group no-margin">
                    <!-- Without left and right borders, extra small horizontal padding, without background, no border radius -->
                    <li class="list-group-item no-border-hr padding-xs-hr no-bg no-border-radius">
                        Bijoux <span class="label label-pa-purple pull-right"> {{ nbprod.nb|default('0') }} créés </span>
                    </li> <!-- / .list-group-item -->
                    <!-- Without left and right borders, extra small horizontal padding, without background -->
                    <li class="list-group-item no-border-hr padding-xs-hr no-bg">
                        Catégories <span class="label label-warning pull-right"> {{ nbcat.nb|default('0') }} créées </span>
                    </li> <!-- / .list-group-item -->
                    <!-- Without left and right borders, extra small horizontal padding, without background -->
                    <li class="list-group-item no-border-hr padding-xs-hr no-bg">
                        Pages <span class="label label-info pull-right"> {{ nbpage.nb|default('0') }} écrites </span>
                    </li> <!-- / .list-group-item -->
                    <!-- Without left and right borders, extra small horizontal padding, without background -->
                    <li class="list-group-item no-border-hr padding-xs-hr no-bg">
                        Commentaires <span class="label label-danger pull-right"> {{ nbcom.nb|default('0') }} rédigés </span>
                    </li> <!-- / .list-group-item -->
                    <!-- Without left and right borders, extra small horizontal padding, without background -->
                    <li class="list-group-item no-border-hr padding-xs-hr no-bg">
                        Fournisseurs <span class="label label-purple pull-right"> {{ nbsup.nb|default('0') }} utilisés </span>
                    </li> <!-- / .list-group-item -->
                    <!-- Without left and right borders, without bottom border, extra small horizontal padding, without background -->
                    <li class="list-group-item no-border-hr no-border-b padding-xs-hr no-bg">
                        Commandes <span class="label label-success pull-right"> {{ nborder.nb|default('0') }} passées </span>
                    </li> <!-- / .list-group-item -->
                </ul>
            </div>

        </div>

        <div class="col-md-4">

            <div class="stat-panel">
                <!-- Danger background, vertically centered text -->
                <div class="stat-cell bg-danger valign-middle">
                    <!-- Stat panel bg icon -->
                    <i class="fa fa-euro bg-icon"></i>
                    <!-- Extra large text -->
                    <span class="text-xlg"><span class="text-lg text-slim">€</span><strong> {{ totalorder.total|default('0')|number_format(2, ',', ' ') }} </strong></span><br>
                    <!-- Big text -->
                    <span class="text-bg">Chiffre d'affaires </span><br>
                    <!-- Small text -->
                    <span class="text-sm"><a href="#">Depuis votre inscription</a></span>
                </div> <!-- /.stat-cell -->
            </div>

        </div>

    </div>

    <div class="row">

        <div class="col-md-6">

            <div class="panel panel-warning" id="dashboard-recent">
            <div class="panel-heading">
                <span class="panel-title"><i class="panel-title-icon fa fa-comment text-danger"></i> 5 Derniers Commentaires </span>
                <ul class="nav nav-tabs nav-tabs-xs">
                    <li class="active">
                        <a href="#dashboard-recent-comments" data-toggle="tab">Commentaires Actifs</a>
                    </li>
                    <li>
                        <a href="#dashboard-recent-threads" data-toggle="tab">Commentaires En cours</a>
                    </li>
                </ul>
            </div> <!-- / .panel-heading -->
            <div class="tab-content">

            <!-- Comments widget -->

            <!-- Without padding -->
            <div class="widget-comments panel-body tab-pane no-padding fade active in" id="dashboard-recent-comments">
                <!-- Panel padding, without vertical padding -->
                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 300px;"><div class="panel-padding no-padding-vr" style="overflow: hidden; width: auto; height: 300px;">

                    {% for value in lastcomact %}

                        <div class="comment">
                            <img src="assets/demo/avatars/5.jpg" alt="" class="comment-avatar">
                            <div class="comment-body">
                                <div class="comment-by">
                                    <a href="#" title="">{{ value.user.firstname ~ " " ~ value.user.lastname }}</a> a commenté sur <a href="#" title="">{{ value.product.title }}</a>
                                </div>
                                <div class="comment-text">
                                    {{ value.content }}
                                </div>
                                <div class="comment-actions">
                                    <a href="#"><i class="fa fa-pencil"></i>Edit</a>
                                    <a href="#"><i class="fa fa-times"></i>Remove</a>
                                    <span class="pull-right">2 hours ago</span>
                                </div>
                            </div> <!-- / .comment-body -->
                        </div> <!-- / .comment -->

                    {% endfor %}

                    </div><div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; z-index: 99; right: 1px; height: 112.640801001252px; background: rgb(136, 136, 136);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"></div></div>
            </div> <!-- / .widget-comments -->

            <!-- Threads widget -->

            <!-- Without padding -->
            <div class="widget-threads panel-body tab-pane no-padding fade" id="dashboard-recent-threads">
                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 300px;"><div class="panel-padding no-padding-vr" style="overflow: hidden; width: auto; height: 300px;">

                    {% for value in  lastcomval %}

                        <div class="thread">
                            <img src="assets/demo/avatars/2.jpg" alt="" class="thread-avatar">
                            <div class="thread-body">
                                <div class="comment-by">
                                    <a href="#" title="">{{ value.user.firstname ~ " " ~ value.user.lastname }}</a> a commenté sur <a href="#" title="">{{ value.product.title }}</a>
                                </div>
                                <div class="comment-text">
                                    {{ value.content }}
                                </div>
                                <div class="comment-actions">
                                    <a href="#"><i class="fa fa-pencil"></i>Edit</a>
                                    <a href="#"><i class="fa fa-times"></i>Remove</a>
                                    <span class="pull-right">2 hours ago</span>
                                </div>
                            </div> <!-- / .thread-body -->
                        </div>

                    {% endfor %}

                    </div><div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; z-index: 99; right: 1px; background: rgb(136, 136, 136);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"></div></div>
            </div> <!-- / .panel-body -->
            </div>
            </div> <!-- / .widget-threads -->

        </div>

        <div class="col-md-6">

            <div class="panel panel-success widget-support-tickets" id="dashboard-support-tickets">
                <div class="panel-heading">
                    <span class="panel-title"><i class="panel-title-icon fa fa-shopping-cart"></i>5 Dernières Commandes</span>
                </div> <!-- / .panel-heading -->
                <div class="panel-body tab-content-padding">
                    <!-- Panel padding, without vertical padding -->
                    <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 300px;"><div class="panel-padding no-padding-vr" style="overflow: hidden; width: auto; height: 300px;">

                        {% for value in  lastorders %}
                            <div class="ticket">

                                {% if value.state == 1 %}
                                    <span class="label label-warning ticket-label">Acceptée</span>
                                {% elseif value.state == 2 %}
                                    <span class="label label-success ticket-label">Livrée</span>
                                {% else %}
                                    <span class="label label-danger ticket-label">Erreur</span>
                                {% endif %}

                                <a href="#" title="" class="ticket-title">{{ value.address }}<span>[€{{ value.total }}]</span></a>
								<!--<span class="ticket-info">
									Opened by <a href="#" title="">Timothy Owens</a> today
								</span>-->
                            </div> <!-- / .ticket -->
                        {% endfor %}

                    </div>
                        <div class="slimScrollBar" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; z-index: 99; right: 1px; height: 93.5550935550936px; background: rgb(136, 136, 136);"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"></div></div>
                </div> <!-- / .panel-body -->
            </div> <!-- / .panel -->

        </div>

    </ div>


{% endblock %}