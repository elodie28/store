{#Crée une balise ouvrante <form>#}
    {{ form_start(form) }}



<div class="row alert alert-dark alert-warning">
    <div class="col-md-4">
        {{ form_row(form.title) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.type) }}
    </div>
    <div class="col-md-2">
        <span class='fa fa-envelope'> {{ form_row(form.email) }} </span>
    </div>
    <div class="col-md-4">
        <span class="fa fa-picture-o"></span> {{ form_row(form.file) }}
    </div>
</div>


<div class="row">
    <div class="col-md-2">
        <span class="fa fa-phone"></span> {{ form_row(form.meta.phone) }}
    </div>
    <div class="col-md-2">
        <span class="fa fa-chain"></span> {{ form_row(form.meta.website) }}
    </div>
    <div class="col-md-4">
        <span class="fa fa-map-marker"></span> {{ form_row(form.meta.city) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.meta.address) }}
    </div>
</div>


<div class="row">
    <i class="fa fa-pencil"></i>{{ form_row(form.description) }}
</div>


<div class="row">
    <div class="col-md-6">
        <span class="fa fa-retweet"></span> {{ form_row(form.meta.retour) }}
    </div>
    <div class="col-md-6">
        <span class="fa fa-user"></span> {{ form_row(form.meta.propos) }}
    </div>
</div>


<div class="row">
    <div class="col-md-2">
        <span class="fa fa-clock-o"></span> {{ form_row(form.meta.delai) }}
    </div>
    <div class="col-md-10">
        <span class="fa fa-truck"></span> {{ form_row(form.meta.expedition) }}
    </div>
</div>


<div class="row">
    <span class="fa fa-gavel"></span> {{ form_row(form.meta.mention) }}
</div>


<div class="row">
    {{ form_row(form.meta.optin) }}
</div>


<div class="row">
    <br/> <br/> <br/>
</div>



{# Bouton envoyer #}
{{  form_widget(form.envoyer, {'attr': {'class': 'pull-left btn btn-lg btn-primary'}}) }}

{# ATTENTION : token  à ne pas oublier -> clef de sécurité du formulaire #}
    {{ form_widget(form._token) }}

    {# Crée une balise fermante </form> #}
    {{ form_end(form, {'render_rest': false}) }}