{% extends "StoreBackendBundle::layout.html.twig" %}

{# Fonction form_theme pour appliquer notre thème du formulaire #}
{% form_theme form 'StoreBackendBundle:Partial:form.html.twig' %}


{% block javascripts %}

    {{ parent() }} {# on appelle la méthode parent pour éviter d'écraser #}

    <script type="text/javascript">
        init.push(function () {

                $('textarea').summernote({
                    height: 200,
                    tabsize: 2,
                    codemirror: {
                        theme: 'monokai'
                    }
                });
            });

    </script>

{% endblock %}


{% block titlepage %}

    <i class="fa fa-plus"></i> Création de produit

{% endblock %}


{% block content %}


    {# Le formulaire de création d'un nouveau produit se situe dans une vue partielle ... #}
    {# ... dans le fichier _form.html.twig dans le dossier Product #}

    {{ include('StoreBackendBundle:Product:_form.html.twig') }}


{% endblock %}