{#Crée une balise ouvrante <form>#}
    {{ form_start(form) }}



<div class="row">
    <div class="col-md-6">
        {{ form_row(form.caption) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.file) }}
    </div>
</div>

<br/>

<div class="row">
    <div class="col-md-4">
        {{ form_row(form.product) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.position) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.active) }}
    </div>
</div>

<br/>



{# Bouton envoyer #}
    {{  form_widget(form.envoyer, {'attr': {'class': 'pull-right btn btn-lg btn-primary'}}) }}

{# ATTENTION : token  à ne pas oublier -> clef de sécurité du formulaire #}
    {{ form_widget(form._token) }}

    {# Crée une balise fermante </form> #}
    {{ form_end(form, {'render_rest': false}) }}